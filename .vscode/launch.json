{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Orders Service",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8001",
                "-t",
                "public"
            ],
            "cwd": "${workspaceFolder}/services/orders",
            "port": 9003,
            "env": {
                "APP_ENV": "dev",
                "DATABASE_URL": "sqlite:///%kernel.project_dir%/var/orders.db",
                "MENU_SERVICE_URL": "http://localhost:8000",
                "INVENTORY_SERVICE_URL": "http://localhost:8002",
                "BILLING_SERVICE_URL": "http://localhost:8003",
                "XDEBUG_MODE": "debug"
            },
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Launch Menu Service",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "public"
            ],
            "cwd": "${workspaceFolder}/services/menu",
            "port": 9003,
            "env": {
                "APP_ENV": "dev",
                "DATABASE_URL": "sqlite:///%kernel.project_dir%/var/menu.db",
                "INVENTORY_SERVICE_URL": "http://localhost:8002",
                "XDEBUG_MODE": "debug"
            },
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Launch Inventory Service",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8002",
                "-t",
                "public"
            ],
            "cwd": "${workspaceFolder}/services/inventory",
            "port": 9003,
            "env": {
                "APP_ENV": "dev",
                "DATABASE_URL": "sqlite:///%kernel.project_dir%/var/inventory.db",
                "MENU_SERVICE_URL": "http://localhost:8000",
                "XDEBUG_MODE": "debug"
            },
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Launch Billing Service",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8003",
                "-t",
                "public"
            ],
            "cwd": "${workspaceFolder}/services/billing",
            "port": 9003,
            "env": {
                "APP_ENV": "dev",
                "DATABASE_URL": "sqlite:///%kernel.project_dir%/var/billing.db",
                "ORDERS_SERVICE_URL": "http://localhost:8001",
                "XDEBUG_MODE": "debug"
            },
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/mnt/c/Users/appad/otel-php": "${workspaceFolder}"
            },
            "log": true,
            "xdebugSettings": {
                "max_data": 65535,
                "show_hidden": 1,
                "max_children": 100,
                "max_depth": 5
            }
        }
    ]
}